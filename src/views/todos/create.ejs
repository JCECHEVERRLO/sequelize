create <%- include('../layouts/header', {title: 'Crear nuevo proyecto '}); -%>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="alert alert-success text-center">Crear nueva tarea</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="/create" method="post" class="row">
                    <div class="col-6">
                        <label for="title" class="form-label">tittle</label>
                        <input type="text" name="title" id="title" class="form-control" required>
                    </div>
                    <div class="col-6">
                        <label for="completed" class="form-label">completed</label>
                        <input type="number" name="completed" id="completed" class="form-control" required>
                    </div>
                  
                    <div class="col-12 d-grid mt-4">
                        <button type="submit" class="btn btn-outline-success">Create</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-grid mt-4">
                <a href="/todospanel" class="btn btn-outline-secondary">
                    volver a la lista de proyectos
                </a>
            </div>
        </div>
    </div>

<%- include('../layouts/footer'); -%>




